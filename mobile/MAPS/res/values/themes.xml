<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="MAPSTheme"
           parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/maps_actionbar</item>
        <item name="android:actionBarTabTextStyle">@style/mapsActionBarTabText</item>
		<item name="android:itemTextAppearance">@style/mapsMenuActionBarText</item>
		<item name="android:popupMenuStyle">@style/mapsMenuActionBarBackground</item>
		<item name="android:activatedBackgroundIndicator">@drawable/listitem_background</item>
    </style>
    
    <style name="maps_actionbar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/red_maps</item>
        <item name="android:titleTextStyle">@style/ProjActionBar.TitleTextStyle</item>
   	</style>
   	
    <style name="ProjActionBar.TitleTextStyle" parent="@android:style/TextAppearance">
    	<item name="android:textColor">@color/white</item>
<!--     	<item name="android:textSize">20sp</item> -->
	</style>
    
   <!-- ActionBar tabs text styles -->
    <style name="mapsActionBarTabText" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="mapsMenuActionBarText" parent="@android:style/Widget.Holo.Light.ActionBar">
    	<item name="android:actionMenuTextColor">@color/white</item>
	</style>
	
    <style name="mapsMenuActionBarBackground" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/red_maps</item>
    </style>
   	   
</resources>