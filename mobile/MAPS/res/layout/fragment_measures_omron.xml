<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray" >

    <TextView
        android:id="@+id/bpm_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bpm_label"
        android:layout_alignBottom="@+id/bpm_label"
        android:layout_alignLeft="@+id/max_value"
        android:text="68,0"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/temp_mInsertion_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/status_omron_label"
        android:layout_below="@+id/min_label"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="49dp"
        android:text="@string/max_label_text"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bpm_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/temp_mInsertion_label"
        android:layout_below="@+id/temp_mInsertion_label"
        android:layout_marginTop="39dp"
        android:text="@string/bpm_text"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/min_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/temp_mInsertion_label"
        android:layout_below="@+id/msg_omron_value"
        android:layout_marginTop="37dp"
        android:text="@string/min_label_text"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/msg_omron_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_omron_label"
        android:layout_marginTop="31dp"
        android:layout_toLeftOf="@+id/status_omron_value"
        android:text="@string/msg_omron_text"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/status_omron_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/msg_omron_label"
        android:layout_alignParentTop="true"
        android:layout_marginTop="31dp"
        android:text="@string/status_omron_text"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/status_omron_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/msg_omron_label"
        android:layout_alignLeft="@+id/save_button_omron"
        android:layout_marginLeft="31dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/msg_omron_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/msg_omron_label"
        android:layout_alignBottom="@+id/msg_omron_label"
        android:layout_alignLeft="@+id/status_omron_value"
        android:textSize="20sp" />

    <Button
        android:id="@+id/save_button_omron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:minHeight="100dp"
        android:minWidth="200dp"
        android:text="@string/save_button_text"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/temp_mInsertion_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/min_label"
        android:layout_alignBottom="@+id/min_label"
        android:layout_centerHorizontal="true"
        android:text="58,0"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/max_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/temp_mInsertion_label"
        android:layout_alignBottom="@+id/temp_mInsertion_label"
        android:layout_alignLeft="@+id/temp_mInsertion_value"
        android:text="96,0"
        android:textSize="50sp"
        android:textStyle="bold" />

</RelativeLayout>