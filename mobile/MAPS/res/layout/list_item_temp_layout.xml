<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip" >

    <ImageView
        android:id="@+id/p_type_icon"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:adjustViewBounds="true"
        android:contentDescription="TODO"
        android:maxWidth="80dp"
        android:src="@drawable/thermometer" />

    <TextView
        android:id="@+id/time_measured"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/p_type_icon"
        android:gravity="center_vertical"
        android:text="21/12/2009 21:54"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/temp_lv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/time_measured"
        android:layout_alignTop="@+id/time_measured"
        android:layout_marginRight="40dp"
        android:text="150"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/temp_lv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/time_measured"
        android:layout_alignBottom="@+id/time_measured"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/temp_lv_value"
        android:text="Temp:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/temp_units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/time_measured"
        android:layout_alignTop="@+id/time_measured"
        android:layout_marginRight="16dp"
        android:text="ÂºC"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>